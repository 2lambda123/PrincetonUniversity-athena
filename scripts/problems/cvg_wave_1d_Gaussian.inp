<job>
problem_id      = wave_1d   # Basename of output filenames

<output1>
# file_type     = tab       # Athena++ ASCII data
file_type       = hdf5      # dump to hierarchical format
variable        = wave      # variables to be output
dt              = 0.025     # time increment between outputs
data_format     = %.16e
#ghost_zones     = 1        # include ghost zones

# <output2>
# file_type       = hst       # History data
# dt              = 0.5       # time increment between outputs
# data_format     = %.16e

<output3>
file_type       = rst       # restart data
dt              = 0.1       # control frequency via time-step

<time>
cfl_number      = 0.1       # The Courant, Friedrichs, & Lewy (CFL) number
tlim            = 0.2       # time limit
integrator      = rk4       # time integrator

<mesh>
refinement      = static    # Static mesh refinement

nx1             = 512     # Number of zones in X1-direction
x1min           = -4.0      # minimum value of X1
x1max           =  4.0      # maximum value of X1
ix1_bc          = extrapolate_outflow  # inner-X1 boundary flag
ox1_bc          = extrapolate_outflow  # outer-X1 boundary flag

nx2             = 1         # Number of zones in X2-direction
x2min           = -1.0      # minimum value of X2
x2max           =  1.0      # maximum value of X2
ix2_bc          = periodic  # inner-X2 boundary flag
ox2_bc          = periodic  # outer-X2 boundary flag

nx3             = 1         # Number of zones in X3-direction
x3min           = -1.0      # minimum value of X3
x3max           =  1.0      # maximum value of X3
ix3_bc          = periodic  # inner-X3 boundary flag
ox3_bc          = periodic  # outer-X3 boundary flag

<wave>
c = 1.0
use_Sommerfeld  = 1         # type of Sommerfeld condition to apply (if any)

<problem>
sigma = 0.0625              # 1/16

<meshblock>
nx1        = 256          # Number of zones per MeshBlock in X1-direction
nx2        = 1              # Number of zones per MeshBlock in X2-direction
nx3        = 1              # Number of zones per MeshBlock in X3-direction

num_threads = 2             # Number of OpenMP threads per process

