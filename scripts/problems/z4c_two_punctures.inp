<job>

# Basename of output filenames.
problem_id = z4c

<z4c>

lapse_harmonic = 0.0
lapse_harmonicf = 1.0
lapse_oplog = 2.0
lapse_advect = 1.0
shift_advect = 1.0
# Kreiss-Oliger dissipation parameter.
diss = 0.02
chi_div_floor = 1e-05
# Constraint damping factor 1.
damp_kappa1 = 0.02
# Constraint damping factor 2.
damp_kappa2 = 0.0

###############################################################################
# Gauge shift-damping controller
###############################################################################
# constant [no new flags]; used in other settings as \eta_A
shift_eta = 2.0

# compile with -z_eta_track_tp
shift_eta_w = 2.67
shift_eta_delta = 2.0
shift_eta_P = 3.0
shift_eta_TP_ix = 0           # dist. from this centre (tracker ix)

# compile with -z_eta_conf
shift_eta_a = 2.0
shift_eta_b = 2.0
shift_eta_R_0 = 1.31
###############################################################################

###############################################################################
# Wave extraction
###############################################################################
# The extraction radius
extraction_radius_0 = 10
extraction_radius_1 = 20
# Controls # of points on spherical grid
extraction_nlev = 20
# Extracted set: {l <= lmax && |m|<=l}
lmax = 2
# Filename
extract_filename = wave_extraction
###############################################################################

<problem>
tracker_filename = tracker_tp
verbose = True
# x coordinate of the m+ puncture
par_b = 6
# mass of the m+ puncture
par_m_plus = 0.5
# mass of the m- puncture
par_m_minus = 0.5
# target ADM mass for m+
target_M_plus = 0.666666666666666666666
# target ADM mass for m-
target_M_minus = 0.3333333333333333333333
# momentum of the m+ puncture
par_P_plus1 = -0.0005373
par_P_plus2 = 0.085035
par_P_plus3 = 0.0
# momentum of the m- puncture
par_P_minus1 = 0.0005373
par_P_minus2 = -0.085035
par_P_minus3 = 0.0
# spin of the m+ puncture
par_S_plus1 = 0.0
par_S_plus2 = 0.0
par_S_plus3 = 0.0
# spin of the m- puncture
par_S_minus1 = 0.0
par_S_minus2 = 0.0
par_S_minus3 = 0.0
# offset b=0 to position (x,y,z)
center_offset1 = 0.0
center_offset2 = 0.0
center_offset3 = 0.0
# User provides bare masses not target M_ADM
give_bare_mass = false
# No. coeff in the compactified radial dir.
npoints_A = 30
# No. coeff in the angular dir.
npoints_B = 30
# no. coeff in the phi dir.
npoints_phi = 16
# Tolerance for Newton solver
Newton_tol = 1e-10
# Maximum number of Newton iterations
Newton_maxit = 10
# A small number to smooth out singularities at punc. loc.
TP_epsilon = 0.0
# Tiny number to avoid nans near or at the puncture locations
TP_Tiny = 0.0
# Radius of an extended spacetime instead of the puncture
TP_Extend_radius = 0
# Tol. of ADM masses when give_bare_mass=no
adm_tol = 1e-10
do_residuum_debug_output = False
do_initial_debug_output = False
# Solve for momentum constraint?
solve_momentum_constraint = False
# Exponent n for psi^-n initial lapse profile (<0)
initial_lapse_psi_exponent = -2.0
# x<->z coord interchange during interp. (black holes become separated in z direction)
swap_xz = False
n_punct = 2

<output1>

# Dump to hierarchical format.
file_type = hdf5
variable = con
# Time increment between outputs
dt = 0.5
data_format = %.16e
ghost_zones = true

<output2>

# Dump to hierarchical format.
file_type = hdf5
variable = adm
# Time increment between outputs
dt = 0.5
data_format = %.16e
ghost_zones = true

<output3>

# Dump to hierarchical format.
file_type = hdf5
variable = z4c
# Time increment between outputs
dt = 0.5
data_format = %.16e
ghost_zones = true

<output4>

# Restart format.
file_type = rst
# Time increment between outputs
dt = 5.0

<output5>

# Restart format.
file_type = hst
dt = 5.0

<time>

cfl_number = 0.5
tlim = 2
integrator = rk4
ncycle_out = 5
nlim = -1

<mesh>

refinement = adaptive
num_threads = 8
numlevel = 5
deref_count = 0
# Number of zones in X1-direction
nx1 = 36
# Minimum value of X1
x1min = -80
# Maximum value of X1
x1max = 80
# Inner-X1 boundary flag
ix1_bc = outflow
# Outer-X1 boundary flag
ox1_bc = outflow
nx2 = 36
x2min = -80
x2max = 80
ix2_bc = outflow
ox2_bc = outflow
nx3 = 36
x3min = -80
x3max = 80
ix3_bc = outflow
ox3_bc = outflow

<meshblock>

nx1 = 18
nx2 = 18
nx3 = 18

