<comment>
problem   = beam of radiation in GR (black hole spacetime)
configure = -g -r --prob gr_rad_beam --coord schwarzschild -hdf5

<job>
problem_id = beam_bh  # name of run

<time>
cfl_number = 0.3  # fraction of Courant condition
nlim       = -1   # maximum number of timesteps
tlim       = 5.0  # maximum time to run
integrator = vl2  # time integration algorithm
xorder     = 2    # order of spatial reconstruction
ncycle_out = 1    # interval for stdout summary info

<output1>
file_type = hdf5  # output format
variable  = uov   # choice of variables to output
id        = user  # name of output files
dt        = 1.0   # output cadence
xdmf      = 0     # whether to include auxiliary metadata file

<output2>
file_type = rst    # output format
dt        = 100.0  # output cadence

<mesh>
nx1    = 12                  # number of cells in r-direction
x1min  = 2.1                 # minimum r
x1max  = 6.0                 # maximum r
x1rat  = 1.0914260861594995  # ratio of adjacent r-widths
ix1_bc = user                # inner boundary
ox1_bc = user                # outer boundary

nx2    = 30                 # number of cells in theta-direction
x2min  = 0.0                # minimum theta
x2max  = 3.141592653589793  # maximum theta (pi)
ix2_bc = polar              # upper boundary
ox2_bc = polar              # lower boundary

nx3    = 64                 # number of cells in phi-direction
x3min  = 0.0                # minimum phi
x3max  = 6.283185307179586  # maximum phi (2*pi)
ix3_bc = periodic           # clockwise boundary
ox3_bc = periodic           # counterclockwise boundary

refinement = none  # whether to use mesh refinement

num_threads = 1  # number of threads per process

<meshblock>
nx1 = 12  # block size in r-direction
nx2 = 10  # block size in theta-direction
nx3 = 32  # block size in phi-direction

<refinement1>
level = 1                   # refinement level
x1min = 2.1                 # minimum r
x1max = 6.0                 # maximum r
x2min = 1.3089969389957472  # minimum theta (5/12*pi)
x2max = 1.8325957145940461  # maximum theta (7/12*pi)
x3min = 0.0                 # minimum phi
x3max = 6.283185307179586   # maximum phi (2*pi)

<coord>
m = 1.0  # black hole mass M
a = 0.0  # black hole spin a (0 <= a/M < 1)

<hydro>
gamma = 1.3333333333333333  # ratio of specific heats Gamma

<radiation>
n_polar     = 7  # number of polar angles in direction space
n_azimuthal = 8  # number of azimuthal angles in direction space

<problem>
pos_1  = 3.0                 # r-coordinate of beam origin
pos_2  = 1.5707963267948966  # theta-coordinate of beam origin
pos_3  = 0.0                 # phi-coordinate of beam origin
width  = 1.0                 # full proper diameter of beam
dir_1  = 0.0                 # relative r-direction of beam center
dir_2  = 0.0                 # relative theta-direction of beam center
dir_3  = 1.0                 # relative phi-direction of beam center
spread = 60.0                # full spread of beam in direction, in degrees
